<!--pages/addcl/addcl.wxml-->
<!-- 容器 -->
<view class='ui_uploader_cell'>
    <!-- 根据已选择的图片临时路径数组展示图片-->
    <view class='ui_uploader_item' wx:for="{{uploaderList}}" wx:key="{{index}}">
        <!-- 删除-->
        <icon class='ui_uploader_item_icon' bindtap='clearImg' data-index="{{index}}" type="clear" size="20" color="red"/>
        <!-- 图片-->
        <image bindtap='showImg' data-index="{{index}}" src='{{item}}'></image>
    </view>
    <!-- 上传按钮+框 -->
    <view class='ui_uploader' bindtap='upload' wx:if="{{showUpload}}"></view>
</view>


<view class="page-body">

  <view class="page-section">
    <view class="weui-cells__title" >  训练计划名称：{{inputValue}}</view>
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell weui-cell_input">
        <input class="weui-input"  maxlength="30" bindinput="bindKeyInput" placeholder="输入训练计划名称"/>
      </view>
    </view>
  </view>

  <view class="page-section">
    <view class="weui-cells__title">计划时长:{{inputValue}}</view>
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell weui-cell_input">
        <input class="weui-input"  maxlength="10" bindinput="bindKeyInput" placeholder="输入计划时长"/>
      </view>
    </view>
  </view>

  <view class="page-section">
    <view class="weui-cells__title">教练：{{inputValue}}</view>
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell weui-cell_input">
        <input class="weui-input"  maxlength="10" bindinput="bindKeyInput" placeholder="输入教练"/>
      </view>
    </view>
  </view>

  <view class="page-section">
    <view class="weui-cells__title">价格：{{inputValue}}</view>
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell weui-cell_input">
        <input class="weui-input"  maxlength="10" bindinput="bindKeyInput" placeholder="输入价格"/>
      </view>
    </view>
  </view>





</view>
<view class="button-sp-area">
  <button class="mini-btn" type="primary" size="mini">添加</button>
   <button class="mini-btn" type="default" size="mini">取消</button>
</view>
